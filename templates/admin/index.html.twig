<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- ===== BOX ICONS ===== -->
        <link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.5/css/boxicons.min.css' rel='stylesheet'>

		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		<link rel="stylesheet" href="{{ asset('css/admin_styles.css') }}">
	</head>
    <body id="body-pd"> 
        <header class="header" id="header">
            <div class="header__toggle">
                <i class='bx bx-menu' id="header-toggle"></i>
            </div>
            <div class="header__img">
                <img src="img/p-1.jpg">
            </div>
        </header> 

        <div class="l-navbar" id="nav-bar">
            <nav class="nav">
                <div>
                    <a href="{{ path('app_home') }}" class="nav__logo">
                        <i class='bx bx-layer nav__logo-icon'></i>
                        <span class="nav__logo-name">Accueil</span>
                    </a>
                    <div class="nav__list">
                        <a href="{{ path('admin_categories_home') }}" class="nav__link">
                            <i class='bx bx-grid-alt nav__icon' ></i>
                            <span class="nav__name">Categories</span>
                        </a>
						<a href="{{ path('admin_stats') }}" class="nav__link">
                            <i class='bx bx-bar-chart-alt-2 nav__icon' ></i>
                            <span class="nav__name">Statistique</span>
                        </a>
                        <a href="{{ path('admin_annonces_home') }}" class="nav__link">
                            <i class='bx bx-stopwatch nav__icon'></i>
                            <span class="nav__name">Annonce</span>
                        </a>
                    </div>
                </div>
                <a href="{{ path('app_logout') }}" class="nav__link">
                    <i class='bx bx-log-out nav__icon' ></i>
                    <span class="nav__name">Log Out</span>
                </a>
            </nav>
        </div>
		<main>
			<button data-target="example-sidenav" class="btn press amaranth dark-1 sidenav-trigger hide-md-up">
				Open sidenav
			</button>
			{% block body %}{% endblock %}
		</main>

		<footer class="footer primary">
			
		</footer>


		
		{% block javascripts %}{% endblock %}
		<script src="{{ asset('js/admin.js') }}"></script>
	</body>
</html>